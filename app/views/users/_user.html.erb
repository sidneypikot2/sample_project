<% presenter = user.decorate %>
<tr id="<%= dom_id user %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
  <td class="w-4 p-4">
    <%= turbo_frame_tag "select_user" do %>
      <div class="flex items-center">
        <%= check_box_tag dom_id(user), 'yes', false, data: { controller: "user-selector", action: "user-selector#select" }, class: "select_user w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
        <%# <input id="checkbox-table-search-1" data: { action: "turbo-modal#hideModal" } type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"> %>
        <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
      </div>
    <%- end %>
  </td>
  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= presenter.id %>
  </th>
  <td class="px-6 py-4">
    <%= presenter.name %>
  </td>
  <td class="px-6 py-4">
    <%= presenter.email %>
  </td>
  <td class="px-6 py-4">
    <%= presenter.phone %>
  </td>
  <td class="px-6 py-4">
    <%= presenter.complete_address %>
  </td>
  <td class="px-6 py-4">
    <%= presenter.company_details %>
  </td>
  <td class="px-6 py-4">
    <%= link_to "Edit", edit_user_path(user),class:"font-medium text-blue-600 dark:text-blue-500 hover:underline", data: { turbo_frame: 'modal' } %>
  </td>
</tr>